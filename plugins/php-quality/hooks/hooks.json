{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // .tool_input.filePath // empty' | grep -q '\\.php$' && ${CLAUDE_PLUGIN_ROOT}/scripts/post-php-write.sh || true"
          }
        ]
      }
    ]
  }
}
